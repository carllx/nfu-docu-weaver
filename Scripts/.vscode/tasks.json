{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Script",
      "type": "shell",
      "command": "osascript",
      "args": [
        "testObsidian.applescript"
      ]
    },
    {
      "label": "Compile Script",
      "type": "shell",
      "command": "osacompile",
      "args": [
        "-o",
        "testObsidian.scpt",
        "testObsidian.applescript"
      ],
      "group": "build"
    },
    {
      "label": "Compile Script Bundle",
      "type": "shell",
      "command": "osacompile",
      "args": [
        "-o",
        "testObsidian.scptd",
        "testObsidian.applescript"
      ],
      "group": "none"
    },
    {
      "label": "Compile Application",
      "type": "shell",
      "command": "osacompile",
      "args": [
        "-o",
        "testObsidian.app",
        "testObsidian.applescript"
      ],
      "group": "none"
    }
  ]
}