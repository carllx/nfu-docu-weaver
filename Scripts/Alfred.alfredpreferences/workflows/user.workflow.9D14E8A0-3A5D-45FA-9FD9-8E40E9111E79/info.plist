				<string>function readFile(path) {
  const data = $.NSFileManager.defaultManager.contentsAtPath(path)
  return $.NSString.alloc.initWithDataEncoding(data, $.NSUTF8StringEncoding).js
}

function run() {
  const urlList = $.NSProcessInfo.processInfo.environment.objectForKey("alfred_workflow_cache").js + '/urls.txt'

  if (!$.NSFileManager.defaultManager.fileExistsAtPath(urlList)) return JSON.stringify({items: [{title: "No URLs to list", valid: false}]})

  const sfItems = readFile(urlList).split("\n").map(line =&gt; {
    const sides = line.split("|")
    const viewURL = sides[0]
    const deleteURL = sides[1]
    const name = $(viewURL).lastPathComponent.js

    return {
      title: name,
      subtitle: '↵ to open in web browser, ⌘↵ to delete, ⌥↵ to copy, ⇧ to view in quicklook',
      arg: viewURL,
      mods: {
        cmd: { subtitle: 'Open screenshot deletion page', arg: deleteURL },
        alt: { subtitle: 'Copy screenshot link' }
      }
    }
  })

  return JSON.stringify({items: sfItems})
}</string>
