}
classic_data <- RP$Classic %>%
mutate(type = "classic", label = Reference, size = Freq / max(Freq) * 80)
related_data <- RP$Related %>%
rename(Year = PY) %>%
mutate(type = "related", label = TI, size = TC / max(TC) * 80)
